<%= content_tag :div, class: "user-container", id: "user-#{user.id}" do %>
<%= link_to user_unfollow_path(user), method: :delete, class:'close', remote: true do %>
  <i class="glyphicon glyphicon-remove"> </i>&nbsp;
<% end %>
<div class="info">
  <div class="user-image">
    <%= image_tag(user.avatar, class:'user-img') %>
  </div>
  <div class="user-info">
    <div class="user-name">
      <%= user.name %>
    </div>
    <div class="user-options">
      <% if user.mentioned?(current_user) %>
        <span class='tag'>Engaged</span>
      <% end %>
      <% if user.influencer? %>
        <span class='tag'>Influencer</span>
      <% end %>
      <div>Following you</div>
      <div class='followers-number'><%= user.followers.count %> Followers</div>
    </div>
    <div class='dismiss-actions'>
      <% if current_user.follows?(user) %>
        <%= link_to user_unfollow_path(user), method: :delete, class: 'btn btn-info btn-xs unfollow-btn', remote: true do %>
          <i class="glyphicon glyphicon-minus"> </i>&nbsp; Unfollow
        <% end %>
      <% else %>
        <%= link_to user_follow_path(user), method: :delete, class: 'btn btn-info btn-xs follow-btn', remote: true do %>
          <i class="glyphicon glyphicon-plus"> </i>&nbsp; Follow
        <% end %>
      <% end %>
      <%= link_to user_mention_user_path(user), class: 'btn btn-info btn-xs', method: :delete, remote: true do %>
        <i class="glyphicon glyphicon-edit"> </i>&nbsp; Say Hi
      <% end %>
    </div>
  </div>
</div>
<% end %>
